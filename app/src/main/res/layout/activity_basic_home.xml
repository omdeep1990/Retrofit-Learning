<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@drawable/background"
    tools:context=".Activity.BasicHomeActivity">

    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="110dp"
        android:id="@+id/json"
        app:cornerRadius="20dp"
        android:elevation="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_size"
        android:textStyle="bold"
        android:background="@drawable/rounded_btn"
        android:text="JSON Placeholder"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tmdb"
        app:layout_constraintTop_toBottomOf="@+id/json"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:cornerRadius="20dp"
        android:elevation="30dp"
        android:layout_below="@+id/json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_size"
        android:textStyle="bold"
        android:background="@drawable/rounded_btn"
        android:text="TMDB"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/weather"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tmdb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tmdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_size"
        android:textStyle="bold"
        android:background="@drawable/rounded_btn"
        android:text="Accu Weather"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rapidApi"
        app:layout_constraintTop_toBottomOf="@+id/weather"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:cornerRadius="20dp"
        android:elevation="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_size"
        android:textStyle="bold"
        android:background="@drawable/rounded_btn"
        android:text="RapidAPI"
        />

</androidx.constraintlayout.widget.ConstraintLayout>