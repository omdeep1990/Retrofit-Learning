<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:textSize="15dp">

    <TextView
        android:id="@+id/postId"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Post Id: "/>


    <TextView
        android:id="@+id/post_Id"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/postId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Post Id: "/>

    <TextView
        android:id="@+id/Id1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/post_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Id: "/>

    <TextView
        android:id="@+id/Id"
        android:layout_toRightOf="@+id/Id1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/post_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Id: "/>

    <TextView
        android:id="@+id/name1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Name: "/>

    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@+id/name1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Name: "/>

    <TextView
        android:id="@+id/email1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Email: "/>

    <TextView
        android:id="@+id/email"
        android:layout_toRightOf="@+id/email1"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Email: "/>

    <TextView
        android:id="@+id/body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:text="Body: "
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/body"
        android:layout_toRightOf="@+id/body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:text="Body: "
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>